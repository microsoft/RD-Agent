{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "header-max-length": [2, "always", 100],
        "type-enum": [
            2,
            "always",
            ["build", "chore", "ci", "docs", "feat", "fix", "perf", "refactor", "revert", "style", "test", "Release-As"]
        ]
    }
}
